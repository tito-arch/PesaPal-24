{
  //"$schema": "https://json.schemastore.org/tsconfig", // https://github.com/tsconfig/bases/blob/main/bases/node-lts.json
  "display": "Node LTS (22)",
  "_version": "22.0.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "outDir": "dist",
    "module": "esnext",
    "noUncheckedIndexedAccess": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}